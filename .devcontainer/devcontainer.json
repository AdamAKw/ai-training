{
  "name": "Node.js & Mongo DB",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  // Configure tool-specific properties.
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      // Add the IDs of extensions you want installed when the container is created.
      "extensions": [
        "mongodb.mongodb-vscode",
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "formulahendry.auto-close-tag",
        "formulahendry.auto-rename-tag",
        "mongodb.mongodb-vscode"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers-extra/features/typescript:2": {},
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": false,
      "installOhMyZsh": false,
      "username": "node"
    }
  },

  "forwardPorts": [3000, 27017],

  // X11 Forwarding configuration
  "mounts": [
    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind",
    "source=${localEnv:HOME}/.Xauthority,target=/home/node/.Xauthority,type=bind,consistency=cached"
  ],

  // Environment variables for X11
  "containerEnv": {
    "DISPLAY": "${localEnv:DISPLAY}",
    "XAUTHORITY": "/home/node/.Xauthority",
    "CYPRESS_CACHE_FOLDER": "/home/node/.cache/Cypress"
  },

  // Additional run arguments for X11
  "runArgs": ["--network=host", "--ipc=host"],

  // Use 'postCreateCommand' to run commands after the container is created.
  "postCreateCommand": "npm --prefix ./application install && chmod 644 /home/node/.Xauthority 2>/dev/null || true",

  // Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
  "remoteUser": "node"
}
