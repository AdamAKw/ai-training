{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Development Server",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "group": "test",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/application"
      }
    },
    {
      "label": "Run Cypress Tests (Headless)",
      "type": "shell",
      "command": "npm run cypress:run",
      "group": "test",
      "dependsOn": "Start Development Server",
      "options": {
        "cwd": "${workspaceFolder}/application"
      },
      "problemMatcher": []
    },
    {
      "label": "Open Cypress Test Runner",
      "type": "shell",
      "command": "npm run cypress:open",
      "group": "test",
      "dependsOn": "Start Development Server",
      "options": {
        "cwd": "${workspaceFolder}/application"
      },
      "problemMatcher": []
    },
    {
      "label": "Run E2E Tests with Server",
      "type": "shell",
      "command": "npm run test:e2e",
      "group": "test",
      "options": {
        "cwd": "${workspaceFolder}/application"
      },
      "problemMatcher": []
    },
    {
      "label": "Build and Start Production",
      "type": "shell",
      "command": "npm run build && npm run start",
      "group": "build",
      "options": {
        "cwd": "${workspaceFolder}/application"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "isBackground": true,
      "problemMatcher": [
        {
          "owner": "quarkus",
          "fileLocation": [
            "relative",
            "${workspaceFolder}/src/main/resources/templates"
          ],
          "pattern": [
            {
              "regexp": "\\[(\\d+)\\]\\s(.*):(\\d+):(\\d+)\\s\\-\\s{(.*)}:\\s(.*)$",
              "file": 2,
              "line": 3,
              "column": 4,
              "message": 6
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^.*Scanning for projects...",
            "endsPattern": "(^.*Quarkus .* started in .*\\.)|(^.* ERROR .* Failed to start)"
          }
        }
      ],
      "group": "build",
      "label": "quarkus:dev (backend)",
      "command": "./mvnw quarkus:dev ",
      "windows": {
        "command": ".\\mvnw.cmd quarkus:dev "
      },
      "options": {
        "cwd": "backend"
      }
    },
    {
      "type": "shell",
      "isBackground": true,
      "problemMatcher": [
        {
          "owner": "quarkus",
          "fileLocation": [
            "relative",
            "${workspaceFolder}/src/main/resources/templates"
          ],
          "pattern": [
            {
              "regexp": "\\[(\\d+)\\]\\s(.*):(\\d+):(\\d+)\\s\\-\\s{(.*)}:\\s(.*)$",
              "file": 2,
              "line": 3,
              "column": 4,
              "message": 6
            }
          ],
          "background": {
            "activeOnStart": true
          }
        }
      ],
      "group": "build",
      "label": "package -Pnative (backend)",
      "command": "./mvnw package -Pnative ",
      "windows": {
        "command": ".\\mvnw.cmd package -Pnative "
      },
      "options": {
        "cwd": "backend"
      }
    }
  ]
}
